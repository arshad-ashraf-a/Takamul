@model IEnumerable<WebApplication1.Models.Student>
@{

}

<h2>Student List</h2>

<a href="@Url.Action("AddStudent", "Students")" class="btn btn-primary pull-right">New</a>
@*<a href="@Url.Action("Edit", "Student", new { id = item.DealPostID })" class="btn btn-primary pull-right">New</a>*@
<div class="clearfix"></div>
<hr />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Gender</th>
            <th scope="col">Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.STUDENT_NAME</td>
                <td>@item.EMAIL</td>
                <td>@item.GENDER</td>
                <td><a href="@Url.Action("EditStudent", "Students", new { nStudentID = item.ID })" class="btn btn-primary">Edit</a> | <button type="button" class="btn btn-primary">Delete</button></td>
            </tr>
        }
    </tbody>
</table>
