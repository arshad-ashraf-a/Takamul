@model Takamul.Models.ViewModel.ApplicationViewModel

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmAddApplication", @class = "form-horizontal" }))
{
    <div class="panel panel-flat">
        <div class="panel-body">

            @Html.AntiForgeryToken()

            @* Application Name *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Application Name&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.APPLICATION_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "application name" } })
                        </div>
                    </div>
                </div>
            </div>

            @* Application Member *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Application Member&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <select id="ddlMemberUser" name="MemberUserID" class="form-control col-md-12"></select>
                        </div>
                    </div>
                </div>
            </div>

            @* Application Logo *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Application Logo</label>
                        <div class="col-lg-8">
                            <input type="file" id="fuAddApplicationLogo" class="file-styled">
                        </div>
                    </div>
                </div>
            </div>

            @* Application Expiry Date *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Application Expiry Date</label>
                        <div class="col-lg-4">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="icon-calendar22"></i></span>
                                @Html.EditorFor(model => model.FORMATTED_EXPIRY_DATE, new { htmlAttributes = new { @class = "form-control datepicker-menus", @Value = (Model.APPLICATION_EXPIRY_DATE.AddYears(1)).ToString("dd/MM/yyyy"), placeholder = "application expiry date" } })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<script type="text/javascript">
    function fnFillAllMemberUsers() {
        //TODO:: option add 'ALL'
        FillDropDownRoot('@Url.Action("JGetAllMemberUsers", "Common")', 'POST', false, 'ddlMemberUser', 'ID', 'FULL_NAME', '- Select User - ', ' ', [],
            function () {
                //Success Function
                $("#ddlMemberUser").select2({ width: '100%' });
            },
            function () {
                //Error
            })
    }

    //Entry Point
    $(document).ready(function () {
        fnFillAllMemberUsers();
    });

</script>
