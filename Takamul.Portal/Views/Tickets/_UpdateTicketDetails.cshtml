@model Takamul.Models.ViewModel.TicketViewModel

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmAddTicket", @class = "form-horizontal" }))
{
    <div class="panel panel-flat">
        <div class="panel-body">

            @Html.AntiForgeryToken()

            @* Ticket Name *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Ticket Name&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.TICKET_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = "ticket name" } })
                        </div>
                    </div>
                </div>
            </div>

            @* Ticket Descirption *@
            <div class="form-group" id="dvUserName">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Ticket Descirption&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            <textarea class="form-control" rows="3" placeholder="ticket description" cols="5" name="TICKET_DESCRIPTION"></textarea>
                            @*@Html.EditorFor(model => model.TICKET_DESCRIPTION, new { htmlAttributes = new { @class = "form-control", placeholder = "ticket description" } })*@
                        </div>
                    </div>
                </div>
            </div>

            @* Ticket Participant User *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">Ticket Participant User</label>
                        <div class="col-lg-8">
                            <select id="ddlTicketParticipant" name="MobileParticipantId" class="form-control col-md-12">
                            </select>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

}
<script type="text/javascript">
    function fnFillTicketParticipantUsers() {
        //TODO:: option add 'ALL'
        FillDropDownRoot('@Url.Action("JGetAllApplicationUsers", "Users")', 'POST', false, 'ddlTicketParticipant', 'ID', 'FULL_NAME', '- Select User - ', ' ', [],
            function () {
                //Success Function
                $("#ddlTicketParticipant").select2({ width: '100%' });
            },
            function () {
                //Error
            })
    }

    //Entry Point
    $(document).ready(function () {
        fnFillTicketParticipantUsers();
    });

</script>
