@using Takamul.Portal.Resources.Portal.ApplicationCategory;
@model Takamul.Models.ViewModel.ApplicationCategoryViewModel

@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmAddApplicationCategory", @class = "form-horizontal" }))
{
    <div class="panel panel-flat">
        <div class="panel-body">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.APPLICATION_ID)

           @* Category Name *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@ApplicationCategoryResx.CategoryName&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.CATEGORY_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = @ApplicationCategoryResx.CategoryName } })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
