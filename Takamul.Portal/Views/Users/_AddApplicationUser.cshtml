@model Takamul.Models.ViewModel.UserInfoViewModel
@using Takamul.Portal.Resources.Portal.Users;
@using Takamul.Portal.Resources.Controls.Buttons;
@using Takamul.Portal.Resources.Common;
@using (Html.BeginForm("", "", FormMethod.Post, new { id = "frmAddUserPartialPage", @class = "form-horizontal" }))
{
    <div class="panel panel-flat">
        <div class="panel-body">

            @Html.AntiForgeryToken()

            @* User Type  *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@UsersResx.UserType</label>
                        <div class="col-lg-8">
                            <select id="ddlUserTypeID" onchange="fnDDLUserTypeOnChange();" name="USER_TYPE_ID" class="form-control col-md-12">
                                <option value="3">@UsersResx.Staff</option>
                                <option value="4">@UsersResx.MobileUser</option>
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            @* User Full Name  *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@UsersResx.FullName&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.FULL_NAME, new { htmlAttributes = new { @class = "form-control", placeholder = @UsersResx.FullName } })
                        </div>
                    </div>
                </div>
            </div>

            @* User Name *@
            <div class="form-group" id="dvUserName">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@UsersResx.UserName&nbsp;<span class="text-danger">*</span></label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.USER_NAME, new { htmlAttributes = new { id="txtUserNamePopUp", @class = "form-control", placeholder = @UsersResx.UserName } })
                        </div>
                    </div>
                </div>
            </div>

            @* Phone Number *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@UsersResx.PhoneNumber</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.PHONE_NUMBER, new { htmlAttributes = new { @class = "form-control", placeholder = @UsersResx.PhoneNumber } })
                        </div>
                    </div>
                </div>
            </div>

            @* Email *@
            <div class="form-group">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-lg-4 control-label">@UsersResx.Email</label>
                        <div class="col-lg-8">
                            @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control", placeholder = @UsersResx.Email } })
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>

}
<script type="text/javascript">
    var enmUserType = { Staff: 3, MobileUser: 4 };
    function fnDDLUserTypeOnChange() {
        $("#txtUserNamePopUp").val("");
        var nUserType = Number($("#ddlUserTypeID").val());
        if (nUserType == enmUserType.Staff) {
            $("#dvUserName").show();
            $("#dvPopUpWindow").dialog({
                minHeight: "auto"
            });
        }
        else {
            $("#dvUserName").hide();
        }
    }
</script>
