        function fnClearSearch() {
            $("#txtSearchByMemberID").val("");
            $("#txtSearchByMemberName").val("");
        }

        function fnGoToMemberDetais(nMemberID) {
            debugger;
            var vMemberID = -99;
            if (nMemberID != null && nMemberID != undefined && nMemberID != -99) {
                vMemberID = nMemberID;
            }
            else {
                var gdMemberist = $('#' + sGridViewSelector);
                vMemberID = gdMemberist.jqGrid('getGridParam', 'selrow');
            }

            $.ajax({
                url: '@Url.Action("JSetCurrentMemberID", "Members")',
                type: 'POST',
                data: { nMemberID: vMemberID },
                async: true,
                success: function (result, response) {
                    if (result.nResult == 1) {
                        url = '@Url.Action("AppDashboard", "MemberDashboard")';
                        window.location.href = url;

                    }
                    else {
                        ShowStatusBarNotification(result.sResultMessages, NotificationType.Error);
                    }
                },
                error: function (result, response) {
                    ShowStatusBarNotification(result.sResultMessages, NotificationType.Error);
                }
            });


        }

