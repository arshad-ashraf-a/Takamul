@model Takamul.Models.ViewModel.UserInfoViewModel

<div class="row">
    <div class="panel panel-white">
        <div class="panel-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-12">
                        @* Is Active*@
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-lg-6">
                                    @Html.CheckBox("IS_ACTIVE", (bool)Model.IS_ACTIVE, new { @class = "styled" }) Is Active
                                </div>
                             
                            </div>
                        </div>
                        @* Is Blocked*@
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-lg-8">
                                    @Html.CheckBox("IS_BLOCKED", (bool)Model.IS_BLOCKED, new { @class = "styled", onchange = "fnBlockedStatusOnChange();" }) Is Blocked
                                </div>
                            </div>
                        </div>
                        @if (Model.UserType == Infrastructure.Core.enumUserType.MobileUser)
                        {
                            @* Is OTP Verified*@
                            <div class="col-md-4">
                                <div class="form-group">
                                    <div class="col-lg-8">
                                        @Html.CheckBox("IS_OTP_VALIDATED", (bool)Model.IS_OTP_VALIDATED, new { @class = "styled" })Is OPT Verified
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="form-group" id="dvBlockedReason" style="display:none;">
                            <div class="col-md-12">
                                @* Blocked Reason*@
                                <div class="form-group">
                                    <label class="col-lg-2 control-label">Blocked Reason</label>
                                    <div class="col-lg-10">
                                        <textarea id="txtBlockedReason" class="form-control" placeholder="enter blocked reason&hellip;&hellip;"
                                                  cols="5" rows="5"></textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(".styled").uniform({
        radioClass: 'choice'
    });

    function fnBlockedStatusOnChange() {
        var bIsChecked = ($("#IS_BLOCKED").is(':checked'));
        if (bIsChecked) {
            $("#txtBlockedReason").val("");
            $("#dvBlockedReason").show();
        }
        else {
            $("#dvBlockedReason").hide();
        }
    }
</script>